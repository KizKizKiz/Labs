{
  "ConnectionStrings": {
    "SPORT_GOODS_DB": ""
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Debug"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:o} ({MachineName}/{ThreadId}) {Level}] {SourceContext:l} {Scope} {Message:l}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "log-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:o} ({MachineName}/{ThreadId}) {Level}] [{SourceContext:l}] {Scope} {Message:l}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessName",
      "WithProcessId",
      "WithThreadId"
    ]
  }
}